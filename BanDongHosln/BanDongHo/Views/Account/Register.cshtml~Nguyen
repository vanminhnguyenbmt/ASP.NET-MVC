@*Script kiểm tra ô nhập lại mật khẩu phải trùng với ô trên*@
<script type="text/javascript">
    $('#btnSubmit').click(function () {
        var loi = 0;
        if($('#inPassWord').val() != $('#rePassWord').val())
        {
            $('#LoiPassWord').text('Mật khẩu không khớp nhau !');
            loi++;
        }
        else {
            $('#LoiPassWord').text('');
        }
        if(loi != 0)
        {
            return false;
        }
        return true;
    });
</script>