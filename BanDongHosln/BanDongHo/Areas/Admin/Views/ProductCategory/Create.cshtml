@model BanDongHo.Areas.Admin.Models.ProductCategoryViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm mới loại sản phẩm</h1>
            <p style="color:green">@ViewBag.message</p>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="post" action="~/Admin/ProductCategory/Create">
               
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="control-label">Mã loại sản phẩm</label>
                            @Html.ValidationMessageFor(model => model.MALOAISP, "", new { @class = "text-danger", @style = "color: red" })
                            <input type="text" class="form-control" id="MALOAISP" name="MALOAISP" placeholder="" value="@Model.MALOAISP" readonly/>                         
                        </div>

                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.TENLOAISP, "", new { @class = "text-danger", @style = "color: red" })
                            <label class="control-label">Tên Loại sản phẩm</label>
                            <input type="text" class="form-control" id="TENLOAISP" name="TENLOAISP" placeholder="" required value="@Model.TENLOAISP" />
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-ok-create" type="submit"> Ok </button>
                    <button class="btn btn-danger" id="btn-cancel-create"> Cancel </button>
                </div>
            </form>
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


<!-- javascript -->
<script>
        function validateName() {
            var name = $('#MALOAISP').val();

            if (isEmpty(name)) {
                $('#MALOAISP').css("border-color", "red");
                return false;
            } else {
                $('#MALOAISP').css("border-color", "green");
            }
            return true;
        }
</script>